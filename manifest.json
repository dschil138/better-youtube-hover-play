{
  "manifest_version": 3,
  "name": "Better YouTube Hover",
  "version": "1.0",
  "description": "Change YouTube hover autoplay functionality to not trigger while scrolling.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["*://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  }
}

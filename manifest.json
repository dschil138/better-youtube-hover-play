{
  "manifest_version": 3,
  "name": "Better YouTube Previews",
  "version": "2.2",
  "description": "Stup YouTube video previews from playing on hover, and play them on long click instead",
  "permissions": ["activeTab", "storage", "tabs", "scripting"],
  "host_permissions": [
    "*://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/shadow-16.png",
    "32": "images/shadow-32.png",
    "48": "images/shadow-48.png",
    "64": "images/shadow-64.png",
    "128": "images/shadow-128.png"
  }
}

{
  "manifest_version": 3,
  "name": "Better YouTube Hover",
  "version": "2.5",
  "description": "Change YouTube Autoplay function to activate on long click rather than hover.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["*://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  // "icons": {
  //   "16": "images/16.png",
  //   "32": "images/32.png",
  //   "48": "images/48.png",
  //   "64": "images/64.png",
  //   "128": "images/128.png"
  // },
  "background": {
    "service_worker": "background.js"
  }
}
